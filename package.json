{
  "name": "postgrejs",
  "description": "Professional PostgreSQL client NodeJS",
  "version": "2.21.0",
  "author": "Panates",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "doublylinked": "^2.5.4",
    "lightning-pool": "^4.8.0",
    "postgres-bytea": "^3.0.0",
    "power-tasks": "^1.11.0",
    "putil-merge": "^3.13.0",
    "putil-promisify": "^1.10.1",
    "putil-varhelpers": "^1.6.5",
    "tslib": "^2.7.0"
  },
  "devDependencies": {
    "@panates/eslint-config": "^1.0.21",
    "@panates/eslint-config-ts": "^1.0.21",
    "@panates/tsconfig": "^1.0.21",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.5.5",
    "@types/pg": "^8.11.10",
    "auto-changelog": "^2.5.0",
    "dotenv": "^16.4.5",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "madge": "^8.0.0",
    "pg": "^8.12.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-cleanup": "^1.3.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2"
  },
  "scripts": {
    "clean": "npm run clean:src && npm run clean:dist",
    "clean:dist": "rimraf build coverage",
    "clean:src": "ts-cleanup -s src --all | ts-cleanup -s test",
    "prebuild": "npm run clean:dist && npm run lint",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json && cp support/package.cjs.json ./build/cjs/package.json",
    "build:esm": "tsc -b tsconfig-build-esm.json && cp support/package.esm.json ./build/esm/package.json",
    "postbuild": "npm run postbuild:copyfiles && node ./support/postbuild.cjs",
    "postbuild:copyfiles": "cp LICENSE README.md CHANGELOG.md ./build && cp ./support/package.esm.json ./build/esm/package.json",
    "test": "jest",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --max-warnings=0 --fix",
    "format": "prettier . --write --log-level=warn",
    "precover": "rimraf coverage",
    "check": "madge --circular src/**",
    "cover": "jest --runInBand --detectOpenHandles --coverage",
    "precitest": "rimraf coverage",
    "citest": "jest --coverage --coverageReporters=lcov",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "prepare": "husky"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./types/index.d.ts",
        "default": "./esm/index.js"
      },
      "require": {
        "types": "./types/index.d.cts",
        "default": "./cjs/index.js"
      },
      "default": "./esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./types/index.d.ts",
  "homepage": "https://postgrejs.panates.com/",
  "contributors": [
    "Eray Hanoglu <e.hanoglu@panates.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/postgrejs.git"
  },
  "engines": {
    "node": ">=16.0"
  },
  "files": [
    "cjs/",
    "esm/",
    "types/",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "keywords": [
    "postgresql",
    "postgres",
    "postgre",
    "pg",
    "database",
    "db",
    "driver",
    "client",
    "backend",
    "rdbms",
    "sql",
    "typescript",
    "ts",
    "esm"
  ]
}
